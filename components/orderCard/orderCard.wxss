.OrderCard {
    position: relative;
    width: 93vw;
    background-color: #fff;
    padding: 30rpx;
    box-sizing: border-box;
    margin: 30rpx auto;
    box-sizing: border-box;
    box-shadow: 0 5rpx 20rpx -2rpx rgba(0, 0, 0, 0.4);
}

.OrderCard:last-child{
    margin-bottom: 150rpx;
}

.bournCard {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-bottom: 100rpx;
    margin-top: 40rpx;
}

.bournCard .bournCardAddr {
    font-size: 34rpx;
    flex: 1;
    text-align: center;
}

.bournCard .bournCardPlane {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #83a4ff;
}


.bournCard .bournCardPlane .bournCardPlaneIcon {
    width: 70rpx;
    height: 70rpx;
}

.orderNumber {
    font-size: 26rpx;
}

.copyOrderNumber {
    background-color: #d9f1dd;
    color: #40b850;
    font-size: 22rpx;
    display: inline-block;
    padding: 2rpx 4rpx;
    border-radius: 4rpx;
    margin-left: 26rpx;
}

.buttonGroup {
    text-align: right;
    display: flex;
    width: 280rpx;
    justify-content: space-between;
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
}

.detail {
    position: absolute;
    bottom: 0;
    right: 0;
}

