.wrap {
    width: 93vw;
    margin: 40rpx auto;
    box-sizing: border-box;
    box-shadow: 0 5rpx 20rpx -2rpx rgba(0, 0, 0, 0.4);
    padding: 30rpx;
    background-color: #fff;
    font-size: 28rpx;
    line-height: 2;
}

.imgWrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.img {
    width: 200rpx;
    height: 200rpx;
}


.item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    border: 2rpx solid #cfcfcf;
    box-sizing: border-box;
    margin: 0 0 40rpx;
    box-shadow: 4rpx 15rpx 20rpx -6rpx #666;
}


.right {
    margin-left:30rpx;
}

.info {
    color: #787878;
    font-size: 24rpx;
    line-height: 1.5;
}

.note {
    color: #e7691d;
    font-weight: 700;
}

.bill {
    margin: 20rpx 0 0;
}