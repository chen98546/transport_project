<view class="modalMask" hidden="{{closeModal}}"></view>
<view class="modal" hidden="{{closeModal}}">
    <view class="modalTitle">
        <slot name="modalTitle" />
    </view>
    <!-- <van-icon class="modalClose" name="cross" size="40rpx" color="#999" /> -->
    <view class="copAddress">
        <view class="cityIcon">
            <slot name="cityIcon" />
        </view>
        <view class="userInfo">
            <view class="usertext">
                <view class="username">
                    <slot name="username" />
                </view>
                <view class="userPhone">
                    <slot name="userPhone" />
                </view>
            </view>
            <view class="userAddress">
                <slot name="userAddress" />
            </view>
        </view>
    </view>

    <view class="modalBtn">
        <view class="modalRefuse">
            <slot name="modalRefuse" />
        </view>
        <view class="modalAllow">
            <slot name="modalAllow" />
        </view>
    </view>
</view>