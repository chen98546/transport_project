<view class="emptyBox" wx:if="{{!address.length}}">
    <van-empty description="亲，你还没有添加地址信息喔~" />
    <button class="addAddrBtn" bindtap="toAddAddressEv">添加地址</button>
</view>
<block wx:else>
    <Address address="{{address}}" bind:refreshEv="refreshEv" bind:emitSetDefault="emitSetDefaultEv"></Address>
    <van-button round type="info" color="#83a4ff" bindtap="toAddAddressEv">新建地址</van-button>
</block>