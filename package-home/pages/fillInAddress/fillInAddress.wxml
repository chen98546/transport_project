<view class="wrap">
    <view class="warehouse">
        <view class="noticeIcon">
            <van-icon name="location-o" color="#fff" size="40rpx" />
        </view>
        <text>仓库地址</text>
    </view>
    <view class="warehouseInfo">
        <view class="warehouseInfoLeft">{{warehouseInfo.name}}</view>
        <view class="warehouseInfoRight" bindtap="copyPhoneNumber" data-phoneNum="{{ warehouseInfo.phone}}">
            {{warehouseInfo.phone}}<text class="copyPhoneNumber">复制</text>
        </view>
    </view>
    <view class="warehouseAddress">{{warehouseInfo.provinces + warehouseInfo.city + warehouseInfo.address}}</view>
</view>

<view class="wrap receipt">
    <view class="receiptInfo">目标国收件信息</view>
    <view class="receiptInfo">
        <view class="receiptLeft">
            <van-icon class="warningIcon" name="warning-o" color="#ed9560" size="24rpx" />
            <text class="fillEnInfo">请用英文填写</text>
        </view>
        <view class="receiptRight" bindtap="selectAddrEv">
            选择地址
        </view>
    </view>
    <FillAddrInfo bind:receiveInfo="receiveInfoEv" addressInfo="{{address}}" isHome="{{true}}">
        <button slot="button" class="transportBtn" bindtap="transportEv">立即转运</button>
    </FillAddrInfo>
</view>