page {
    background-color: #f7f6f6;
}

.indexHeader {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 470rpx;
    background-color: #4e148c;
}

.radius {
    position: absolute;
    /* top: 260rpx; */
    left: 0;
    z-index: -1;
    background-color: #4e148c;
    width: 100%;
    height: 400rpx;
    /* border-bottom-left-radius: 50%; */
    /* border-bottom-right-radius: 50%; */
}

.swiper {
    width: 93vw;
    height: 274rpx;
    margin: 30rpx auto;
    overflow: hidden;
    border-radius: 16rpx;
}


.swiper .banner {
    width: 100%;
    height: 100%;
    border-radius: 22rpx;
}

.bournCardBox {
    width: 560rpx;
    height: 346rpx;
    border-radius: 14px;
    background-color: rgba(255, 255, 255, 100);
    text-align: center;
    box-shadow: 0px 3px 7px 2px rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(187, 187, 187, 100);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    box-sizing: border-box;
    padding: 50rpx 0;
}

.bournCard {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.transportBtn {
    width: 320rpx;
    background-color: #4e148c;
    color: #fff;
    font-size: 30rpx;
    padding: 0;
}

.bournCard .bournCardAddr {
    font-size: 54rpx;
}

.bournCard .bournCardPlane .bournCardPlaneIcon {
    width: 90rpx;
    height: 90rpx;
}

.service {
    width: 95vw;
    height: 100rpx;
    border-radius: 100rpx;
    background-color: rgba(255, 102, 0, 100);
    color: rgba(16, 16, 16, 100);
    font-size: 14px;
    text-align: center;
    margin: 30rpx auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 0;
    box-sizing: border-box;
}

.serviceLeft {
    position: relative;
    height: 100%;
}

.serviceImg {
    position: absolute;
    left: -4rpx;
    top: -14rpx;
    width: 110rpx;
    height: 110rpx;
}

.serviceText {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: start;
    margin-left: 130rpx;
    height: 100%;
    color: #fff;
}

.serviceCnt1 {
    font-size: 32rpx;
}

.serviceCnt2 {
    font-size: 24rpx;
    color: #e2e2e2;
}

.noticeBox {
    display: flex;
    justify-content: space-around;
}

.noticeCard {
    position: relative;
    padding: 30rpx;
    box-sizing: border-box;
    width: 320rpx;
    height: 320rpx;
    border-radius: 20rpx;
    background-color: #9977bb;
    color: rgba(16, 16, 16, 100);
    box-shadow: 0 5rpx 10rpx 3rpx rgba(0, 0, 0, 0.4);
    border: 2rpx solid rgba(187, 187, 187, 100);
    color: #fff;
}

.noticeTip1 {
    font-size: 56rpx;
    font-weight: 500;
}

.noticeTip2 {
    font-size: 28rpx;
    margin: 20rpx 0 0;
}

.noticeIcon {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 50%;
    background: #4e148c;
    text-align: center;
    box-shadow: 0 5rpx 10rpx 3rpx rgba(0, 0, 0, 0.4);
    align-self: center;
    position: absolute;
    left: 50rpx;
    bottom: 48rpx;
}

.noticeImg {
    width: 180rpx;
    height: 180rpx;
    position: absolute;
    right: -6px;
    bottom: -6px;
}

.noticeCardCalc {
    background-color: #fc9d62;
}

.noticeIconCalc {
    background-color: #ff6200;
}

.noticeCalcImg {
    width: 130rpx;
    height: 130rpx;
    right: 0;
    bottom: 10rpx;
}


.transportTitle {
    font-size: 56rpx;
    font-weight: 600;
    margin: 40rpx 0 10rpx 30rpx;
}

.processBox {
    display: flex;
    justify-content: space-between;
    width: 100%;
    background-color: #fff;
    padding: 30rpx 15rpx 5rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}

.processItem {
    position: relative;
    width: 100rpx;
    text-align: center;
}

.processTitle {
    font-size: 26rpx;
    margin: 10rpx 0;
    font-weight: 700;
}

.processText {
    font-size: 22rpx;
    color: #aeaeae;
    line-height: 1.5;
}

.arrow {
    position: absolute;
    right: -50rpx;
    top: 50%;
    transform: rotate(-90deg) translateX(50%);
}

.van-button.van-button--info.van-button--normal.van-button--round {
    color: #fff;
    width: 88vw;
    line-height: 85rpx;
    font-size: 32rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);

}

.addrText {
    text-align: center;
    margin: 10rpx 0 250rpx;
    font-size: 28rpx;
    color: #4c168e;

}
