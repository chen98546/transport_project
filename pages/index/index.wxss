page {
    background-color: #f7f6f6;
}

.indexHeader {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 550rpx;
    background: linear-gradient(#83a4ff, #83a4ff, #f7f6f6);
}

.radius {
    position: absolute;
    /* top: 260rpx; */
    left: 0;
    z-index: -1;
    background-color: #83a4ff;
    width: 100%;
    height: 400rpx;
    /* border-bottom-left-radius: 50%; */
    /* border-bottom-right-radius: 50%; */
}

.swiper {
    width: 93vw;
    height: 274rpx;
    margin: 30rpx auto;
    overflow: hidden;
    border-radius: 16rpx;
}


.swiper .banner {
    width: 100%;
    height: 100%;
    border-radius: 22rpx;
}

.bournCardBox {
    width: 93vw;
    /* width: 560rpx; */
    height: 346rpx;
    border-radius: 14px;
    background-color: rgba(255, 255, 255, 100);
    text-align: center;
    box-shadow: 0 5rpx 10rpx 3rpx rgba(0, 0, 0, 0.4);
    border: 2rpx solid rgba(187, 187, 187, 100);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    box-sizing: border-box;
    padding: 50rpx 0;
}

.bournCard {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.transportBtn {
    width: 320rpx;
    background-color: #83a4ff;
    color: #fff;
    font-size: 30rpx;
    padding: 0;
}

.bournCard .bournCardAddr {
    font-size: 54rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 30%;
}

.bournCard .bournCardPlane .bournCardPlaneIcon {
    width: 90rpx;
    height: 90rpx;
}

.service {
    width: 95vw;
    height: 100rpx;
    border-radius: 100rpx;
    background-color: #83a4ff;
    color: rgba(16, 16, 16, 100);
    font-size: 14px;
    text-align: center;
    margin: 30rpx auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 0;
    box-sizing: border-box;
}

.serviceLeft {
    position: relative;
    height: 100%;
}

.serviceImg {
    position: absolute;
    left: -4rpx;
    top: -16rpx;
    width: 110rpx;
    height: 110rpx;
}

.serviceText {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: start;
    margin-left: 130rpx;
    height: 100%;
    color: #fff;
}

.serviceCnt1 {
    font-size: 32rpx;
}

.serviceCnt2 {
    font-size: 24rpx;
    color: #e2e2e2;
}

.noticeBox {
    display: flex;
    justify-content: space-around;
}

.noticeCard {
    position: relative;
    padding: 30rpx;
    box-sizing: border-box;
    width: 320rpx;
    height: 320rpx;
    border-radius: 20rpx;
    background-color: #83a4ff;
    color: rgba(16, 16, 16, 100);
    box-shadow: 0 5rpx 10rpx 3rpx rgba(0, 0, 0, 0.4);
    border: 2rpx solid rgba(187, 187, 187, 100);
    color: #fff;
}

.noticeTip1 {
    font-size: 56rpx;
    font-weight: 500;
}

.noticeTip2 {
    font-size: 28rpx;
    margin: 20rpx 0 0;
}

.noticeIcon {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 50%;
    background: #4b7bff;
    text-align: center;
    box-shadow: 0 5rpx 10rpx 3rpx rgba(0, 0, 0, 0.4);
    align-self: center;
    position: absolute;
    left: 50rpx;
    bottom: 48rpx;
}

.noticeImg {
    transform: rotateY(180deg);
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    right: 15rpx;
    bottom: 0px;
    transform: rotateY(180deg);
}

.noticeCardCalc {
    background-color: #9083ff;
}

.noticeIconCalc {
    background-color: #5f4ef1;
}

.noticeCalcImg {
    width: 140rpx;
    height: 140rpx;
    right: 0;
    bottom: 10rpx;
}


.transportTitle {
    font-size: 56rpx;
    font-weight: 600;
    margin: 40rpx 0 10rpx 30rpx;
}

.processBox {
    display: flex;
    justify-content: space-between;
    width: 100%;
    background-color: #fff;
    padding: 30rpx 15rpx 5rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}

.processItem {
    position: relative;
    width: 100rpx;
    text-align: center;
}

.processTitle {
    font-size: 26rpx;
    margin: 10rpx 0;
    font-weight: 700;
}

.processText {
    font-size: 22rpx;
    color: #aeaeae;
    line-height: 1.5;
}

.arrow {
    position: absolute;
    right: -50rpx;
    top: 50%;
    transform: rotate(-90deg) translateX(50%);
}

.van-button.van-button--info.van-button--normal.van-button--round {
    color: #fff;
    width: 88vw;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}

.addrText {
    text-align: center;
    margin: 10rpx 0 250rpx;
    font-size: 28rpx;
    color: #83a4ff;
}

.userAddress {
    padding: 0 !important;
}

.channelAddress {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}


.channel {
    display: inline-block;
    border: 3rpx solid #bbb;
    /* background-color: #4c168e; */
    /* color: #fff; */
    padding: 16rpx 48rpx;
    margin: 14rpx 32rpx;
    border-radius: 16rpx;
    color: #4c168e;
    font-size: 33rpx;
    box-sizing: border-box;
}

.channelTitle {
    position: relative;
    top: 30rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 34rpx;
}

.copAddress {
    padding: 20rpx 20rpx 0;
}